# === CONFIGURAÇÕES DO AMBIENTE ===
# Copie este arquivo para .env e preencha com seus valores reais

# === CONFIGURAÇÕES DO FLASK ===
FLASK_APP=app.py
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=sua_chave_secreta_aqui

# === CONFIGURAÇÕES DO GOOGLE SHEETS ===
# Nome da planilha no Google Sheets
GOOGLE_SHEET_NAME=IMOBILIARIAS CARUARU 03.06.2025

# Nome da aba/sheet
GOOGLE_SHEET_TAB=BaseDeDados

# Caminho para o arquivo de credenciais JSON (desenvolvimento)
GOOGLE_CREDENTIALS_FILE=credentials.json

# Credenciais em Base64 (produção - Render)
# Para gerar: [Convert]::ToBase64String([IO.File]::ReadAllBytes("credentials.json"))
GOOGLE_CREDENTIALS_BASE64=

# === CONFIGURAÇÕES DE UPLOAD ===
# Pasta para arquivos temporários
UPLOAD_FOLDER=uploads

# Tamanho máximo de arquivo (em bytes)
MAX_FILE_SIZE=16777216

# === CONFIGURAÇÕES DE SERVIDOR ===
# Host do servidor (0.0.0.0 para permitir acesso externo)
HOST=0.0.0.0

# Porta do servidor (Render usa PORT=10000)
PORT=5000
